 <% if params[:updated] %>
    
    <% if params[:rating] %>
       $(".book_rating").html("<%= escape_javascript(render 'rating') %>")
    <% elsif params[:review] %>
       $(".book_review").html("<%= escape_javascript(render 'review') %>")
    <% end %>

 <% else %>
 
    <% if params[:rating] %>
      $(".book_rating").html("<%=  escape_javascript(render 'change_rating') %>")
    <% elsif params[:review] %>
      $(".book_review").html("<%= escape_javascript(render 'change_review') %>")
    <% end %>

<% end %>

 
