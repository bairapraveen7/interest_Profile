
<%= form_with(url: user_book_path(current_user,@book, updated: true), method: "patch", local: false ) do |f| %>
            <div class="form-group row">
                <%= f.label :review, "Review" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :review,value: current_user.connect_books.find_by(book_id: @book.id).review, class: "form-control" %>
                    </div>
            </div>
            <%= f.submit "Update Details" , class: "btn btn-primary" %>
        <% end %>

    </div>
</div>