



        <%= form_with(url: user_book_path(current_user,@book), method: "patch" ) do |f| %>
            <div class="form-group row">
                <%= f.label :rating, "Rating" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.range_field :rating, value: current_user.book_rating(@book), class: "form-control-range" , in: 1..10 %>
                    </div>
            </div>
            <div class="form-group row">
                <%= f.label :review, "Review" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :review,value: current_user.book_review(@book), class: "form-control" %>
                    </div>
            </div>
            <%= f.submit "Update Details" , class: "btn btn-primary" %>
        <% end %>

    </div>
</div>