
    <% @read_books.each do |book| %>
        <div class="col-lg col-sm-8 col-md-3 m-auto">
            <div class="card border-0 shadow">
                <%= link_to user_book_path(@user,book, read: true) do %>
                <%= image_tag(book.image || "movie_logo.jpg" , alt: 'Food Logo' , class: "card-img-top") %>
                <% end %>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= book.name %>
                        </h5>
                        <h7 class="card-title">
                            <%= book.author %>
                        </h7>
           
                        <div class="row d-flex justify-content-between">
                            <div class="col-6 ">
                                        <div class="dropdown">
                                            <button type="button" class="btn btn-primary dropdown-toggle"
                                                data-bs-toggle="dropdown">
                                                Add
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a>
                                                        <%= form_with(url: reading_user_book_path(@user, book), method: :post,local: false) do %>
                                                            <%= submit_tag "reading List" ,
                                                                class: "btn-link btn-primary" %>
                                                                <% end %>
                                                    </a></li>
                                                <li><a>
                                                        <%= form_with(url: to_read_user_book_path(@user, book), method: :post, local: false) do %>
                                                            <%= submit_tag "To_read List" ,
                                                                class: "btn-link btn-primary" %>
                                                                <% end %>
                                                    </a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="col-6 ">

                                        <%= form_with(url: user_book_path(current_user,book), method: "delete", local: false ) do %>
                                          
                                        <%= button_tag(class: "btn btn-warning") do %>
                                           
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                          </svg>

                                          <% end %>

                                          <% end %>
                                        </div>
                        </div>
                    

                    </div>
            </div>
        </div>
        <% end %>
 