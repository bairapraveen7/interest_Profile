



        <%= form_with(url: user_food_path(current_user,@food, updated: true), method: "patch", local: false ) do |f| %>
            <div class="form-group row">
                <%= f.label :rating, "Rating" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.range_field :rating, value: current_user.connect_foods.find_by(food_id: @food.id).rating, class: "form-control-range" , in: 1..5 %>
                    </div>
            </div>
            <%= f.submit "Update Details" , class: "btn btn-primary" %>
        <% end %>

    </div>
</div>