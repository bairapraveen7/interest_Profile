
<%= form_with(url: user_food_path(current_user,@food, updated: true), method: "patch", local: false ) do |f| %>
            <div class="form-group row">
                <%= f.label :review, "Review" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :review,value: current_user.connect_foods.find_by(food_id: @food.id).review, class: "form-control" %>
                    </div>
            </div>
            <%= f.submit "Update Details" , class: "btn btn-primary" %>
        <% end %>

    </div>
</div>