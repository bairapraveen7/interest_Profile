<div id="comment_section_<%= comment.id %>" class="row my-5">
    <div class="col-12">
    <%= link_to gravatar_for(user, size:20), user %>
    <span class="users"><%= link_to user.name, user %></span>
    <span class="timestamp">
        <%= time_ago_in_words(comment.created_at) %> ago.
    </span>
   
   </div>

   <div class="col-12">
      <p>Rating: <%= rating %>/5</p>
   </div>

    <div class="col-12">
        <span class="content">
            <%= comment.content %>
            </span>
    </div>
    <div class="col-12">
        <%= link_to "edit", edit_user_movie_comment_path(user,movie,comment), remote: true %>
    </div>
</div>