<div class="container mt-5 pt-5">
    <div class="row">
      <div class="col-12 col-sm-8 col-md-6 m-auto">
      <%= form_with(url:  user_movie_comments_path(current_user,movie), method: :post, local: false) do %>
      
          <%= text_field_tag 'content', nil, placeholder: 'Write your comment...', class: "form-control"  %>
          <%= submit_tag "Post", class: "btn btn-primary mt-4" %>
      <% end %>
      </div>
    </div>
  </div>