<header>
<nav class="navbar">
  <div class="container-fluid">
    <ul class="nav navbar-nav navbar-right">
      <li  ><%= link_to "Home", root_path, class: "nav-link" %></li>
      <% if logged_in? %>
        <li><%= link_to "Profile", current_user, class: "nav-link" %></li>
        <li><%= link_to 'Log out', logout_path,
        data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></li> 
      <% else %>
        <li  ><%= link_to "Log In", login_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </div>
</nav>
</header>