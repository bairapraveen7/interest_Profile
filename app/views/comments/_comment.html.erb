<% user = User.find(comment.user_id) %>
<% commentable = comment.map_commentable.find(comment.commentable_id) %>
<div id="comment_section_<%= comment.id %>" class="row my-5">
    <div class="col-12">
    <%= link_to gravatar_for(user, size:20), user %>
    <span class="users"><%= link_to user.name, user %></span>
    <span class="timestamp">
        <%= time_ago_in_words(comment.created_at) %> ago.
    </span>
   
   </div>

    <div class="col-12">
        <span class="content">
            <%= comment.content %>
            </span>
    </div>
    <% if current_user?(user) %>
    <div class="col-12">
        <%= link_to "edit", polymorphic_url([current_user,commentable,comment],:action => :edit), remote: true %>
    </div>
    <% end %>
</div>