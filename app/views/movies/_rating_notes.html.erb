



        <%= form_with(url: user_movie_path(current_user,@movie), method: "patch" ) do |f| %>
            <div class="form-group row">
                <%= f.label :rating, "Rating" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.range_field :rating, value: current_user.connect_movies.find_by(movie_id: @movie.id).rating, class: "form-control-range" , in: 1..10 %>
                    </div>
            </div>
            <div class="form-group row">
                <%= f.label :review, "Review" , class: "col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                        <%= f.text_area :notes,value: current_user.connect_movies.find_by(movie_id: @movie.id).notes, class: "form-control" %>
                    </div>
            </div>
            <%= f.submit "Update Details" , class: "btn btn-primary" %>
        <% end %>

    </div>
</div>